{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/types/types.ts",
    "src/constants/constants.ts",
    "src/renderer/src/features/notes/db/**/*",
    "src/renderer/src/features/notes/types/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": [
      "electron-vite/node"
    ]
  }
}